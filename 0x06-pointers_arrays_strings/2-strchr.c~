#include "holberton.h"
#include <stdio.h>

/**
 * main - check the code for Holberton School students.
 *
 * Return: a pointer
 */

char *_strchr(char *s, char c)
{
	int i;
	char *null = NULL;

	for (i = 0; s[i] != '\0'; i++)
	{
		if(s[i] == c)
			return (s + i);
		else
			return (null);
	}
	return (null);
}
