#include "holberton.h"
#include <stdio.h>

/**
 * _strlen_recursion - returns the length of a string
 *@s: characters being counted
 * Return: The length of the string
 */

int _strlen_recursion(char *s)
{
	int count = 0;

	if (s[i] == '\0')
		return;
	if (s[i] != '\0')
	{
		_strlen_recursion(&s[i]);
		_putchar(++count);
	}
	else
		_putchar(count);
}
